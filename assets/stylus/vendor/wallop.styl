.Wallop
  // position relative
  // overflow hidden

.Wallop-list
  position relative
  overflow hidden

.Wallop-item
  visibility hidden
  position absolute
  top 0
  left 0
  width 100%

.Wallop-item--current
  visibility visible
  position relative
  
.Wallop-transform
  transform translate3d(0,-64px,0)
  @media $break-767
    transform translate3d(0,0,0)