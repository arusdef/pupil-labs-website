$w = 20px


.Wallop-buttonNext
.Wallop-buttonPrevious
  border none
  z-index 2
  width ($w * 2)
  height ($w * 2)
  position absolute
  background-color rgba(255,255,255,0.5)
  color #FEFEFE
  border-radius 50%
  font-size 24px
  outline none

.Wallop-buttonPrevious
  left 40px
  
.Wallop-buttonNext
  right 40px

