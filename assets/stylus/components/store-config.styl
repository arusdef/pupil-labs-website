storeConfig-button($stroke=1px)
	display flex
	flex-wrap nowrap
	align-items center
	justify-content center
	border-radius 3px
	// border-top $stroke solid #ddd
	// border-bottom $stroke solid #ddd
	border-right $stroke solid #ddd
	background transparent
	padding .5em
	transition color .3s ease-in-out, background .3s ease-in-out
	font-family $font-family-sans-serif
	font-weight 700
	font-size .9em

	&:hover
		background #ddd
		color black

	&:last-child
		border-right 0px solid #ddd


.StoreConfig-world
	storeConfig-button()

.StoreConfig-eye
	storeConfig-button()			

