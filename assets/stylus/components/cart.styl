#Cart
	// nothing here - placeholder for jQuery
	// padding 1em 1.75em
		
#Cart-table
	width 100%

.Cart-row
	// nothing here - placeholder for JQuery

.Cart-container
	padding 1em 1.75em

.Cart-rowContainer
	margin-bottom .8em
	border-bottom 1px solid gray
	
.Cart-items--3of5
	width (3/5)*100%
	text-align left
	
.Cart-items--1of5
	width (1/5)*100%
	text-align left

#CartSum
	// nothing here - placeholder for jQuery

#CartSum--total
#CartSum--label
	font-weight 700
	padding-top 1.5em
	
tr.Cart-orderItem td
	border-bottom 1px solid black
	
.Cart-removeItem
	user-select none
	transition color .3s ease-in-out

	&:hover
		cursor pointer
		color complement($link-hover-color)

.Cart-containerTriangle
	position relative
	height 100%
	display block

.Cart--triangle-up
	width 0
	height 0
	border-style solid
	border-width 0px 10px 10px 10px
	border-color transparent transparent rgba(0,0,0,.6) transparent
	margin 0.25em
	transition border-color .3s ease-in-out
	
	@media $break-sm
		border-width 0px 5px 5px 5px
	
	
.Cart--triangle-down
	width 0
	height 0
	border-style solid
	border-width 10px 10px 0px 10px
	border-color rgba(0,0,0,.6) transparent transparent transparent
	margin 0.25em
	transition border-color .3s ease-in-out
	
	@media $break-sm
		border-width 5px 5px 0px 5px
	
#Cart-empty
	// nothing here
		
.Cart-itemQuant--increment
	user-select none

	&:hover
		cursor pointer
		>p.Cart--triangle-up
			border-color transparent transparent complement($link-hover-color) transparent
		>p.Cart--triangle-down
			border-color complement($link-hover-color) transparent transparent transparent


