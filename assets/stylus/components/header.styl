.Header-container
	position fixed
	top 0
	left 0
	right 0
	z-index 1
	background-color rgba(255,255,255,0.5)

.Header
	position relative
	display flex
	flex-direction row
	align-items center
	padding 0 1.2em
	pointer-events none
	height 64px
	border-top 3px solid transparent
	border-image linear-gradient(to left, #38EA92 0%, #A1DEF0 100%)
	border-image-slice 1

	
.Header-logo
	flex 1
	pointer-events none
	text-align center

.Header-logo a
	text-decoration none
	display inline-block
	font-family $font-family-sans-serif
	font-weight 700
	font-size $font-size-base + 0.3
	color $text-color
	transition color .3s ease-in-out

.Header-left-bar-item
	width 40px
		
.Header-button-container
	display inline-block
	position relative
	z-index 0
	width 40px
	height 40px

.Header-menu-button
	// justify-content center
	position relative
	vertical-align middle
	display inline-flex

