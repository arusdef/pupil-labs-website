.Header-container
  position fixed
  top 0
  left 0
  right 0
  z-index 1
  background-color rgba(255,255,255,0.95)

.Header
  position relative
  display flex
  flex-direction row
  align-items center
  padding 0 1.2em
  height 64px
  border-top 3px solid transparent
  border-image linear-gradient(to left, #38EA92 0%, #A1DEF0 100%)
  border-image-slice 1
  a
    text-decoration none
    display inline-block
    transition-property none
    pointer-events auto
    color $text-color    
    &:hover
      color $text-color
  
.Header-logo
  flex 1
  pointer-events none
  text-align center
  a
    font-family $font-family-sans-serif
    font-weight 700
    font-size $font-size-base + 0.3

.Header-left-bar-item
  width 40px
    
.Header-button-container
  display inline-block
  position relative
  z-index 0
  width 40px
  height 40px
  color $text-color


.Header-menu-button
  // justify-content center
  position relative
  vertical-align middle
  display inline-flex
  padding 8px
  height 40px
  box-sizing border-box !important
  color $text-color
   

    
.Header-nav
  padding-top 0
    
  @media $break-lg
    float right
    
  @media $break-xs
    padding-top 0.5em
    
  @extend .clearfix

