.Header-container
  position fixed
  top 0
  left 0
  // right 0
  width 100%
  z-index 1
  background rgba(255,255,255,0.95)  
  transition transform 0.33s cubic-bezier(0,0,0.15,1)
  @media (max-width: 767px)
    position relative


.Header-container-hide
  transform translate3d(0px, -135px, 0px);
  @media (max-width: 767px)
    transform none
        
.Header-container-show
  transform translate3d(0px, -66px, 0px);
  @media (max-width: 767px)
    transform none
        

.Header
  position relative
  display flex
  flex-direction row
  align-items center
  padding 0 1.2em
  height 64px
  border-top 3px solid transparent
  border-image linear-gradient(to left, #38EA92 0%, #A1DEF0 100%)
  border-image-slice 1

  a
    text-decoration none
    // display inline-block
    transition-property none
    pointer-events auto
    color $text-color    
    &:hover
      color $text-color


.Header-logo
  flex 1
  pointer-events none
  text-align center
  a
    font-family $font-family-sans-serif
    font-weight 700
    font-size $font-size-base + 0.3

.Header-left-bar-item
  width 40px
 
.Header-right-bar-item    
  position relative
  width 40px
  
.Header-button-container
  display inline-block
  position relative
  z-index 0
  width 40px
  height 40px
  color $text-color


.Header-menu-button
  // justify-content center
  display none
  position relative
  vertical-align middle
  padding 8px
  height 40px
  box-sizing border-box !important
  color $text-color
  @media (max-width: 767px)
    display inline-block
    
.Header-menu-button--cart
  // justify-content center
  display inline-block
  position relative
  vertical-align middle
  padding 8px
  height 40px
  box-sizing border-box !important
  color $text-color

   
.Header-tab-container
  position relative
  height 66px
  display block
  @media (max-width: 767px)
    display none
  
.Header-tab-navs
  display flex
  align-items center
  justify-content center
  
.Nav-tab
  margin 0 10px
  display inline-block
  position relative
    
.Header-cart-badge
  position absolute
  top -3px
  right 5px
  width 18px
  height 18px
  background-color #b1b1b1
  border-radius 50%
  color white
  font-size 11px
  font-weight 700
  pointer-events none
  display none
  flex-direction column
  align-items center
  justify-content center
  
.cart-full
  display flex

.side-nav
  position fixed
  left 0
  top 0
  z-index 2
  width 100%
  height 100%
  overflow hidden
  pointer-events none

.side-nav
  &:before
    content ''
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background rgba(255,255,255,0.5)
    opacity 0
    will-change opacity
    transition opacity 0.3s cubic-bezier(0,0,0.3,1)

.side-nav--visible
  pointer-events auto
  &.side-nav--animatable
    .side-nav__container
      transition transform 0.33s cubic-bezier(0,0,0.3,1)
  &:before
    opacity 1
  .side-nav__container
    transform none

.side-nav__container
  position relative
  width 50%
  max-width 400px
  background #FFF
  height 100%
  box-shadow 2px 0 12px rgba(0,0,0,0.4)
  transform translateX(-102%)
  display flex
  flex-direction column
  will-change transform

.side-nav--animatable
  .side-nav__container
    transition transform 0.13s cubic-bezier(0,0,0.3,1)

.side-nav__hide
  position absolute
  left 16px
  top 16px
  background none
  border none
  color #FFF
  width 24px
  height 24px
  padding 0
  margin 0

.side-nav__header
  height 100px
  background #FFF
  color gray
  display flex
  padding 16px
  align-items flex-end
  font-size 24px

.side-nav__content
  padding-top 32px
  flex 1
  list-style none
  padding 0
  margin 0
  overflow-x hidden
  overflow-y auto
  overflow-scrolling touch
  li
    height 48px
    line-height 48px
    padding 0 16px
    &:hover
      background #CCC


