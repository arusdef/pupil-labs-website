button(bkg=transparent,fontSize=1em,fontWeight=700,pad=1em .1em,border=1px solid #ddd,borderRadius=5px)
	display flex
	align-items center
	border-radius borderRadius
	border border
	color currentColor
	background bkg
	justify-content center	
	transition color .3s ease-in-out,background .3s ease-in-out
	font-family $font-family-sans-serif
	font-weight fontWeight
	font-size fontSize
	padding pad
	

.Button
	button()

.Button-inverse
	button(transparent,1em,700,1em .1em,1px solid #fff,5px)
	color #fff

.Button--whiteBorder
	border 1px solid #fff
	
.Button-radio--sm
	cursor pointer
	button(rgba(255,255,255,.8),.5em,400,.5em .1em,0px,0px)

.Button-radio--lg
	cursor pointer
	button(rgba(0,0,0,.025),1em,700,1em .1em,0,0px)
	border-left 1px solid darken(#ddd,20%)
	border-top 1px solid darken(#ddd,20%)
	border-bottom 1px solid darken(#ddd,20%)
	border-spacing 0px

.Button--state-active
	background $link-hover-color

action_button()
	border-color transparent
	border 1px solid #ddd
	background rgba(255,255,255,.8)
	font-size 1.2em

	&:active
		background complement($link-hover-color)	

.Button--cart
	action_button()
	cursor pointer

.Button--state-inactive
	background darken(rgba(255,255,255,.8),50%)
	pointer-events none
    cursor default
   
	&:hover
		transition none
		hover none

.Button-submit 
	action_button()
	margin-top .75em
	width 100%	
	
.Button-checkout
	action_button()

.no-touch
	.button-flex
	.Button
	.Button-inverse
	.Button-sm
	.Button--cart
		&:hover
			background $link-hover-color
			color #fff
	
	.Button--cart
		&:active
			transition none
			background complement($link-hover-color)	
