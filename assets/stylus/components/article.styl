.Article-summary-list
	display flex
	flex-direction column
	justify-content center
	list-style none
	padding .2em 1em
	
.Article-list-item
	list-style none
	border-bottom 1px solid #ddd
	margin 0 0 1em
	
	&:last-child
		border-bottom none

	
