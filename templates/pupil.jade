extends layout

block main
  //- Title block
  - var page_data = contents.pupil['index.json']
  include includes/title

  //- Features
  //- ====================================
  //- 1. Configurable
  //- 2. Design
  //- 3. Software
  //- 4. Modular & Hackable
  //- 5. OSS
  //- 6. Community
  //- 7. License
  - var features = _.chain(contents.pupil['features']._.pages).sortBy(function(item) {
  -   return item.metadata['order'];
  - }).value()
  each feature, i in features
    - var rowType = (i%2 == 0 ? 'Grid Grid--1of2' : 'Grid Grid--1of2 Grid--rowReverse')
    div(class=rowType)
      div.Grid-cell
        div.Feature
          figure.Feature-figure
            img(class="Feature-image" src="http://placehold.it/800/"+i*111111)
      div.Grid-cell.Grid-cell--center
        div.Feature.Feature--padded-1
          h1.Feature-title--lg.u-textCenter #{ feature.title }
