- var location = 'javascript: window.location.pathname'
header.Header-container
  div(id="Header")
    button(class="Header-menu-button js-menu-show material-icons") menu
    div.Header-logo
      nav
        a(href="/").logotype pupil labs
        //- img(src="../media/graphics/web/logotype_variant_test_white.png" class="logotype-container")

    div.Header-nav
      div(class="Header-cart-badge")
      ul.Header-nav-list
        each url, title in contents.menu['header-nav.json'].metadata
          - var rel_attribute = (title === "docs" ? "noopener" : "")
          - var navItemClass = (location === url ? "Header-nav-item u-linkAttention" : "Header-nav-item")
          - var nav_id = (title === 'cart' ? 'Nav-cart' : '')
          li.Nav-tab
            nav(id=nav_id)
              a(class=navItemClass href=url rel=rel_attribute) #{ title }
    div.Header-cart-button-container
      a(class="Header-cart-badge" id="cart-mobile" href="/cart")

  aside.js-side-nav.side-nav
    nav.js-side-nav-container.side-nav__container
      div.js-menu-hide
      ul.side-nav__content
        li.side-nav-item
          a(class="side-nav-item" href="/") home
        each url, title in contents.menu['header-nav.json'].metadata
          li
            a(class="side-nav-item" href=url) #{ title }
