header.Site-header.Header
  a(class="Header-logo" href=locals.url)= locals.name
  nav(class="Header-nav")
    ul
      each url, title in contents.menu['header-nav.json'].metadata
        - var pageTitle = "none"
        - if (typeof(page) !== 'undefined'){
        -   pageTitle = page.title
        - }
        - var navState = (title == pageTitle ? "Nav-link u-linkAttention" : "Nav-link")
        - var navId = (title === "Cart" ? "Nav-cart" : "")
        - var supTag = (title === "Cart" ? "<sup class=Nav-cart-itemCount></sup>" : "<sup></sup>")
        li.Nav-list-item
          a(href=url id=navId class=navState) #{ title } !{supTag}
