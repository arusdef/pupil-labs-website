footer.Site-footer
  section.Footer-nav
    ul.Grid-noWrap.Grid-noWrap--breakSmall.Grid--stretch.Grid--justifySpaceAround
      each url, title in contents.menu['footer-nav.json'].metadata
        li.Grid-cell--auto.Footer-nav-item
          a(href=url class="Footer-nav-link")= title
  section.Footer-newsletter
    form(id="newsletter-form" data-parsley-validate data-parsley-focus="first")
      div.Grid.Grid--bottom.Grid--gutters
        div.Grid-cell.Grid-cell--2of3
          input(class="Form-input Form-input--text-newsletter" id="mce-EMAIL" type="email" placeholder="email me with news updates" name="EMAIL" required data-parsley-trigger="focusout" data-parsley-errors-container="#news_email_error")
          p(class="Form-error--text" id="news_email_error")
        div.Grid-cell.Grid-cell--1of3
          input(type="submit" value="submit" id="newsletter-form-submit" class="Form-input--submit")
          label(for="newsletter-form-submit" class="Button Button--cart Button-submit-newsletter") Sign Up!
section.Footer-social
    ul.Grid-noWrap.Grid--justifyCenter
      each url, title in contents.menu['footer-connect.json'].metadata
        li.Grid-cell--auto.Footer-social-item
          a(href=url target="_blank" class="Footer-social-link")= title
