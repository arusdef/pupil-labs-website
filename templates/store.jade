extends layout

block append title
  | #{ " - " + page.title}

block main
  //- Title block
  div(id="Store")
    - var page_data = contents.store['index.json']
    - var page_meta = page_data.metadata
    - var titleData = {'title':page_meta.title,'s1':page_meta.s1, 's2':page_meta.s2}    
    include includes/title

    //- Configurator
    include includes/configurator

    //- Additional Products
    div.Banner--gradientBkg--reverse.u-padBottom--2
        - var bannerData = {'title': 'Additional Products','subtitle': "support packages, lenses, computers, and more"}
        - var bannerBkg = "Banner-container--sm"
        include includes/banner

        section.Store-wrapper
          div.Grid--gutters.Aligner.Additional-products

    //- Pupil DIY    
    div.Banner-bkg--gray-darker
        - var bannerData = {'title': 'Pupil DIY','s1': 'If you are on a tight budget and excited about SMD soldering and hacking','s2': 'you can buy the parts, modify cameras, and assemble a Pupil DIY headset'}
        - var bannerBkg = "Banner-container--sm"
        include includes/banner

        section.Store-wrapper--diy
            div.Grid
                div.Grid-cell.u-textCenter
                    h3.Store-diy We have made a guide and a shopping list for you. The total cost for all parts is approximately â‚¬ 300.  
