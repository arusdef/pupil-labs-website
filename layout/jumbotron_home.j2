{# Jumbotron template #}

{% extends "topbar.j2" %}


{% block jumbotron %}
<div class="jumbotron">
    <div class="container text-center jumbotron-home-pupil">
	    {% filter markdown -%}
	    <h1 class="h1-index">{{ resource.meta.title }}</h1>
	    {%- endfilter %}
	  <div class="lead">
	    {% filter markdown -%}
	    {{ resource.meta.subtitle }}
	    {%- endfilter %}
	  </div>


    </div><!-- /container -->
</div><!-- /jumbotron -->
{% endblock jumbotron %}
{% block container %}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h2 class="h2-index text-center">Pupil</h2>
        <p>{% filter markdown -%}
            {% block about_pupil %}{% endblock %}
            {%- endfilter %}
        </p>
            <p class="text-center"><a href="{{ resource.meta.pupil_url }}" class="btn btn-default btn-lg btn-default-pupil">
            {{ resource.meta.pupil_button }}
            </a></p>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <h2 class="h2-index text-center">About</h2>
       <p>{% filter markdown -%}
            {% block about_us %}{% endblock %}
            {%- endfilter %}
        </p>
            <p class="text-center"><a href="mailto:{{ resource.meta.about_contact }}" class="btn btn-default btn-lg btn-default-pupil">
            {{ resource.meta.about_button }}
            </a></p>
    </div>
</div>

{% endblock container %}