.Home-flex-container
	// documentation on flexbox: https://css-tricks.com/snippets/css/a-guide-to-flexbox/
	flexbox_container()
	align-items stretch // fill the container	

	// full width container
	width 100%
	
.Home-flex-item-full-width
	display flex
	flex-direction column
	align-items center
	flex 0 0 auto
	justify-content center

	background linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(255,255,255,1))
	// set up a min-height
	min-height 40vh	
	
	overflow hidden
	position relative
	width 100% // items within the element container should be full width
	padding 5em
	
	@media all and (min-width: 48em)
		min-height 60vh

.Home-flex-item-half-width
	display flex
	flex-direction column
	align-items center
	justify-content center

	background rgba(255,255,255,0.5)
	// set up a min-height
	min-height 40vh	
	
	overflow hidden
	position relative
	padding 5em
		
	@media all and (min-width: 48em)
		// big screen
		// two columns
		flex 1 0 auto
		width 50%
		min-height 60vh
		
	@media all and (max-width: 48em)
		// small screen
		// single column
		flex 0 0 auto
		width 100%	
	
home-item-heading()
	text-align center
	position relative
	text-shadow 0 1px 0 rgba(0,0,0,.1)		

.Home-item-h1
	home-item-heading()
	color #515151 
	font-size 2.4em

.Home-item-h2 
	home-item-heading()
	color #8A8A8A 
	font-size 1.6em
	