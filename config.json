{
  "locals": {
    "url": "http://localhost:3000",
    "name": "Pupil Labs",
    "owner": "Pupil Labs",
    "description": "Pupil Labs - accessible open source eye tracking platform"
  },
  "plugins": [
    "./plugins/paginator.coffee",
    "./plugins/featured-articles.coffee",
    "./plugins/blog.coffee"
  ],
  "shared": {
    "articles": "articles"
  },
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 6,
    "template": "blog.jade",
    "first": "blog/index.html",
    "filename": "blog/%d/index.html"
  },
}
